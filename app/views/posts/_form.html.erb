<%= form_with(model: [post.group, post], class: 'contents') do |form| %>
  <div class="my-5">
    <%= form.text_field :title, class: 'form-input-text', placeholder: "What's the title for this post?" %>
  </div>
  <div class="my-5">
    <%= form.rich_text_area :content, class: 'form-input-text', placeholder: 'You can type @ to mention someone' %>
  </div>
  <div class="flex flex-col items-end">
    <%= form.submit 'Post', class: 'btn-primary' %>
  </div>
<% end %>
