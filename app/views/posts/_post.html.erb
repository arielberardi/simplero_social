<div id="<%= dom_id post %>">
  <div id="post-body-<%= post.id %>">
    <p class="my-5">
      <strong class="block font-medium mb-1">Title:</strong>
      <%= post.title %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Content:</strong>
      <%= post.content %>
    </p>
  </div>
  <div id="post-form-<%= post.id %>" class="hidden">
    <%= render partial: 'posts/form', locals: { post: post } %>
  </div>
  <div id="post-footer-<%= post.id %>" class="flex-col mt-2 font-medium italic text-gray-500">
    <div class="flex">
      <%= time_from_last_comment(post) %> .
      <%= link_to 'Edit', nil, remote: true,
          data: {
            controller: 'posts',
            action: 'posts#toggleForm',
            posts_id_param: post.id,
          }
      %> .
      <%= link_to 'Destroy',
          [post.group, post],
          data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' }
      %>
    </div>
    <%= link_to 'View', [post.group, post], remote: true %>
  </div>
</div>
