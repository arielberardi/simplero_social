<div class="flex w-full space-x-20">
  <div class="flex-col w-3/4 mt-5">
    <%= render 'show_group', group: @group %>
    <div class="mt-5">
      <%= render partial: 'posts/form', locals: { post: @group.posts.build } %>
    </div>
    <div class='mt-30'>
      <h1 class="title-secondary">All posts</h1>
      <%= render partial: 'posts/post', collection: @posts %>
    </div>
  </div>
  <div class="flex-col w-1/4 mt-5">
    <%= render 'members', group: @group %>
  </div>
</div>
