<% if current_owner?(group) %>
<div class="flex-col mt-20">
  <h1 class="title-secondary">Requests</h1>
  <% group.requests.each do |user| %>
    <div class="flex mt-5 items-center">
        <div class="w-2/3">
          <%= user.email %>
        </div>
        <div class="w-1/3 space-x-2">
          <%= link_to accept_group_url(group, user, accepted: true) do %>
            <i class="fa-solid fa-check"></i>
          <% end %>
          <%= link_to accept_group_url(group, user, accepted: false) do %>
            <i class="fa-solid fa-x"></i>
          <% end %>
        </div>
    </div>
  <% end %>
</div>
<% end %>
