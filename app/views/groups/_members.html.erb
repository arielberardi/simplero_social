<% if current_owner?(group) %>
<div class="flex-col">
  <h1 class="title-secondary">Members</h1>
  <% group.users.each do |member| %>
    <div class="flex mt-5 items-center">
        <div class="w-2/3">
          <%= member.email %>
        </div>
        <div class="w-1/3">
          <% unless current_user == member %>
            <%= link_to leave_group_url(group, member) do %>
              <i class="fa-solid fa-x"></i>
            <% end %>
          <% end %>
        </div>
    </div>
  <% end %>
</div>
<% end %>
